<div class="row">
  <div class="col s12 m11 l8 offset-m1 offset-l2  my-1">
    <div class="card-panel z-depth-5">
      <a class="btn waves-effect light-blue lighten-1" href="/">Back
        <i class="material-icons left">arrow_back</i>
      </a>
      <h4 class="center"> Log in form</h4>
      <div class="row ">
        {{!-- form --}}
        <form class="col m10 l9 offset-l1" action="/login" method="POST">
          <div class="input-field col s12 m12">
            <i class="fas fa-at prefix"></i>
            <input id="email" type="email" class="validate" name="username">
            <label for="email">Your Email</label>
          </div>
          <div class="input-field col s12 m12">
            <i class="fa fa-unlock-alt prefix"></i>
            <input id="password" type="password" class="validate" name="password">
            <label for="password" class="">Password</label>
          </div>
      <!--row-->
      </div>
      <button class="btn waves-effect light-blue lighten-1 center">Log in
        <i class="fa fa-sign-in right"></i>
      </button>
      </form>
    </div>
  </div>
  <!--card-->
</div>
