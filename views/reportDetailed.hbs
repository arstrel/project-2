<div class="row">

  <div class="col s12 m11 l8 offset-m1 offset-l2  my-1">
    <div class="card-panel z-depth-5">

        <a class="btn waves-effect light-blue lighten-1" href="/profile">Back
          <i class="material-icons left">arrow_back</i>
        </a>
      
      <div class="row ">
      <h5 class="center"> Detailed report for: <p id="date">{{report.created_at}}</p></h5>
      <div class="row d-flex">

     
        <div class="col">
       
              <table class="stripped center">
        <thead>
          <tr>
              <th>Field</th>
              <th>Value</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td>Total Sales:</td>
            <td>{{report.sales}}</td>
          </tr>
          
          <tr>
            <td>Total Auto Gratuity:</td>
            <td>{{report.totalAutoGrat}}</td>
          </tr>

          <tr>
            <td>Total Tips:</td>
            <td>{{report.tips}}</td>
          </tr>

          <tr>
            <td>Tip out to Bartender:</td>
            <td>{{report.tipoutBartender}}</td>
          </tr>

          <tr>
            <td>Tip out for Food Runner:</td>
            <td>{{report.tipoutFoodRunner}}</td>
          </tr>

          <tr>
            <td>Reported Tips:</td>
            <td>{{report.reportedTips}}</td>
          </tr>

          <tr>
            <td>Take Home:</td>
            <td>{{report.takeHome}}</td>
          </tr>

          <tr>
            <td><b>(Manager)</b>Total tip to bar:</td>
            <td>{{report.totalTipoutBartender}}</td>
          </tr>

          <tr>
            <td><b>(Manager)</b>Total tip to foor runner:</td>
            <td>{{report.totalTipoutFoodRunner}}</td>
          </tr>

         
        </tbody>
      </table>

 
     
            <a class="btn waves-effect amber darken-1" href="/report/edit">Edit
              <i class="material-icons right">edit</i>
            </a>
          </div>
          </div>
       
    </div>
    <!--card-->
  </div>
  <!--col-->
</div>
